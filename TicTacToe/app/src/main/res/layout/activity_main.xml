<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerOne"
        android:text="Player One"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerOneScore"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/playerOne"
        app:layout_constraintLeft_toLeftOf="@+id/playerOne"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo"
        app:layout_constraintRight_toRightOf="@+id/playerTwo"
        android:layout_marginRight="35dp"
        android:id="@+id/playerTwoScore"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerStatus"
        android:textSize="20sp"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@+id/playerOneScore"
        app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn0"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:backgroundTint="#080509"
        app:layout_constraintTop_toBottomOf="@id/playerStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>


    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn1"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#150C17"
       app:layout_constraintTop_toTopOf="@+id/btn0"
        app:layout_constraintLeft_toRightOf="@+id/btn0"

      />
    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn2"

        android:padding="5dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#0A090B"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        app:layout_constraintLeft_toRightOf="@+id/btn1"

        />


    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn3"

        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#0B050C"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>


    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn4"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#1B0720"
        app:layout_constraintTop_toTopOf="@+id/btn3"
        app:layout_constraintLeft_toRightOf="@+id/btn3"

        />
    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn5"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#0E0610"
        app:layout_constraintTop_toTopOf="@+id/btn3"
        app:layout_constraintLeft_toRightOf="@+id/btn1"

        />


    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn6"

        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#0C010E"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>


    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn7"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#09010B"
        app:layout_constraintTop_toTopOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn6"

        />
    <Button
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/btn8"

        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#141115"
        app:layout_constraintTop_toTopOf="@+id/btn6"
        app:layout_constraintLeft_toRightOf="@+id/btn7"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/resetGame"
        android:text="Reset Game "
        android:textColor="#ffffff"
        android:backgroundTint="#E1470D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>